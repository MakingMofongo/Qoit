# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your-supabase-publishable-key

# App URL (for OAuth callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Resend (for waitlist emails)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Slack Integration
# Create a Slack app at https://api.slack.com/apps
# Enable OAuth with redirect URL: {NEXT_PUBLIC_APP_URL}/api/integrations/slack/callback
# Required scopes: users.profile:write, users.profile:read, users:read
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# Google Calendar Integration (coming soon)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Discord Integration
# Create an app at https://discord.com/developers/applications
# Enable OAuth2 with redirect URL: {NEXT_PUBLIC_APP_URL}/api/integrations/discord/callback
# Required scopes: identify, webhook.incoming
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
